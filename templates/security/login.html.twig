{% extends "base.html.twig" %}

{% block title %}
    Connexion
{% endblock title %}

{% block body %}
    <div class="block">
        <h2 class="pb-30">Connexion</h2>

        <form action="{{ path('login') }}" method="post">
            <div class="form-row">
                <label for="email">Email</label>
                <input type="text" name="_username" id="email" value="{{username}}" autofocus>
            </div>
            <div class="form-row">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password">
            </div>
            <div class="form-row">
                <label for="remember_me">
                    <input type="checkbox" name="_remember_me" id="remember_me">
                    Se souvenir de moi ?
                </label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {% if error %}
                <ul class="form-errors pb-20">
                    <li>{{ error.messageKey | trans(error.messageData, 'security') }}</li>
                </ul>
            {% endif %}
            <div class="d-flex flex-row">
                <button class="btn btn-primary mr-10">Connexion</button>
                <div class="d-flex flex-column">
                    <small>
                        <a href="{{ path('signup') }}">Vous n'avez pas de compte ?</a>
                    </small>
                    <small>
                        <a href="{{ path('reset-password-request') }}">Mot de passe oubli√© ?</a>
                    </small>
                </div>
            </div>
        </form>
    </div>
{% endblock body %}